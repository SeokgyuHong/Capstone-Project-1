<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensor_register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mac_address"
                android:layout_width="240dp"
                android:layout_height="58dp"
                android:gravity="left|center"
                android:hint="MAC 주소(XX-XX-XX-XX-XX-XX)"
                android:background="@drawable/edge4"
                android:inputType="text"
                android:paddingLeft="13sp"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mac_address_check"
                android:layout_marginLeft="5dp"
                android:layout_width="125dp"
                android:layout_height="63dp"
                android:gravity="center|center"
                android:text="중복확인"
                android:textSize="15sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sensor_name_text"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="left|center"
                android:hint="센서 이름"
                android:inputType="text"
                android:paddingLeft="13sp"
                android:background="@drawable/edge4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/guardian_phone_number"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="left|center"
                android:hint="피보호자 연락처"
                android:inputType="phone"
                android:paddingLeft="13sp"
                android:background="@drawable/edge4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_location_text"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/edge4"
                android:gravity="left|center"
                android:hint="피보호자 주소"
                android:paddingLeft="13sp"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sensor_location_detail_text"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/edge4"
                android:gravity="left|center"
                android:hint="피보호자 상세 주소"
                android:paddingLeft="13sp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sensor_register_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="확 인"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>