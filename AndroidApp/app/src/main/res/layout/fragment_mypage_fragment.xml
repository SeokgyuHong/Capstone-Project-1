<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage_fragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edge6">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="395dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edge13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/profile" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="23dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:text="노준석"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/login_font"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:text="ljs3271@naver.com"
                        android:textColor="@color/login_font"
                        android:textSize="18sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="395dp"
            android:layout_height="200dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edge13"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="계정관리"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/login_font"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/userinform"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="회원정보 조회"
                android:textColor="@color/login_font"
                android:textSize="18sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ChangPw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="비밀번호 재설정"
                android:textColor="@color/login_font"
                android:textSize="18sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/account_delete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="회원 탈퇴"
                android:textColor="@color/login_font"
                android:textSize="18sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="395dp"
            android:layout_height="165dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edge13"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="앱 설정"
                android:textSize="20sp"
                android:textColor="@color/login_font"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="알림 설정"
                android:textColor="@color/login_font"
                android:textSize="18sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="로그아웃"
                android:textColor="@color/login_font"
                android:textSize="18sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

