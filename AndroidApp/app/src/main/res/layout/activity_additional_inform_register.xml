<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edge6"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/materialTextView"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/register_toolbar_required_information"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView"

                android:textSize="20sp"
                android:textStyle="bold"
                android:text="회원가입"
                android:gravity="center"
                android:layout_gravity ="center"
                />
        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"

            android:weightSum="3">
            <com.google.android.material.textview.MaterialTextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="필수정보 입력"
                android:background="@drawable/edge5"
                android:gravity="center"
                android:layout_width="0dp" />
            <com.google.android.material.textview.MaterialTextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="추가정보 입력"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:background="@drawable/edge16"
                android:layout_width="0dp" />
            <com.google.android.material.textview.MaterialTextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="회원가입 완료"
                android:background="@drawable/edge5"
                android:gravity="center"
                android:layout_width="0dp" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="380dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView"
        app:layout_constraintVertical_bias="0.35"

        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/institution_name"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="left|center"
                    android:hint="보호자 이름"
                    android:background="@drawable/edge4"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="13sp"
                    android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/institution_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="left|center"
                    android:hint="보호자 연락처"
                    android:inputType="phone"
                    android:paddingLeft="13sp"
                    android:background="@drawable/edge4"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/institution_street_name_address"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/edge4"
                    android:gravity="left|center"
                    android:hint="도로명 주소"
                    android:paddingLeft="13sp"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/institution_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/edge4"
                    android:gravity="left|center"
                    android:hint="세부 주소"
                    android:paddingLeft="13sp"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirm_button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="확 인"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>